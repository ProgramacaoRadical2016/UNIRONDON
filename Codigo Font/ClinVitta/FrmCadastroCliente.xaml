            <TextBox x:Name="CmbBAIRRO" HorizontalAlignment="Left" Height="23" Margin="525,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317" FontSize="12"  IsReadOnly="True"/>
